{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.svelte",
        "index.html"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.svelte"],
      "outputs": ["dist/*.js"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.svelte",
        "test/**/*.ts"
      ]
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "inputs": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.svelte",
        "test/**/*.ts"
      ]
    }
  }
}
